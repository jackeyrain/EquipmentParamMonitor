<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <!--定义输出到Log文件中-->
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--定义文件存放位置-->
      <!--目录路径，可以是相对路径或绝对路径-->
      <file value="Logs\\" />
      <!--追加到文件-->
      <appendToFile value="true" />
      <!--创建日志文件的方式，可选值：Date[日期],文件大小[Size],混合[Composite]-->
      <rollingStyle value="Date" />
      <!--单个文件大小。单位:KB|MB|GB-->
      <maximumFileSize value="5000KB" />
      <!--写到一个文件-->
      <staticLogFileName value="false" />
      <!--文件名，按日期生成文件夹-->
      <param name="DatePattern" value="/yyyy-MM-dd/&quot;Info.log&quot;"/>
      <!--创建日志文件的方式，可选值：Date[日期],文件大小[Size],混合[Composite]-->
      <RollingStyle value="Date"/>
      <!--最多保留的文件数，设为"-1"则不限-->
      <maxSizeRollBackups value="-1"/>
      <!--日志格式-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %message%newline" />
      </layout>
    </appender>
    <!--定义输出到Error文件中-->
    <appender name="ErrorFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="Encoding" value="utf-8" />
      <file value="Logs\\" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <maximumFileSize value="5000KB" />
      <staticLogFileName value="false" />
      <param name="DatePattern" value="/yyyy-MM-dd/&quot;Error.log&quot;"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %message%newline" />
      </layout>
    </appender>
    <!--定义输出到Exception文件中-->
    <appender name="ExceptionFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="Encoding" value="utf-8" />
      <file value="Logs\\" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <maximumFileSize value="5000KB" />
      <staticLogFileName value="false" />
      <param name="DatePattern" value="/yyyy-MM-dd/&quot;Exception.log&quot;"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date ID:[%thread] Level:%-5level - Descption:%message%newline" />
      </layout>
    </appender>
    <!--定义console输出-->
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="Info" />
        <foreColor value="Green ,HighIntensity" />
      </mapping>
      <mapping>
        <level value="Warn" />
        <foreColor value="Blue ,HighIntensity" />
        <backColor value="White" />
      </mapping>
      <mapping>
        <level value="Error" />
        <foreColor value="Yellow ,HighIntensity" />
      </mapping>
      <mapping>
        <level value="Fatal" />
        <foreColor value="Red, HighIntensity"/>
        <backColor value="White" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="Debug"/>
        <param name="LevelMax" value="Fatal"/>
      </filter>
    </appender>

    <logger name="Info">
      <level value="ALL"/>
      <appender-ref ref="LogFileAppender" />
      <appender-ref ref="ColoredConsoleAppender" />
    </logger>
    <logger name="Warn">
      <level value="ALL"/>
      <appender-ref ref="LogFileAppender" />
      <appender-ref ref="ColoredConsoleAppender" />
    </logger>
    <logger name="Error">
      <level value="ALL"/>
      <appender-ref ref="ErrorFileAppender" />
      <appender-ref ref="ColoredConsoleAppender" />
    </logger>
    <logger name="Fatal">
      <level value="ALL"/>
      <appender-ref ref="ExceptionFileAppender"/>
      <appender-ref ref="ColoredConsoleAppender" />
    </logger>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6" />
  </startup>
</configuration>
